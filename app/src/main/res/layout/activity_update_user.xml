<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateUser">
  <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar_update_user"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/adamina"
        android:text="Update User"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_back_update_user"
        android:layout_width="30dp"
        android:layout_height="30sp"
        android:src="@drawable/ic_back" />
  </com.google.android.material.appbar.MaterialToolbar>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_user"
          android:layout_gravity="center"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="50dp"
          android:fontFamily="@font/adamina"
          android:text="Name"
          android:textColor="@color/colorPrimary"
          android:textSize="15sp" />

      <EditText
          android:id="@+id/ed_name_user_update"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/adamina"
          android:inputType="text"
          android:textColor="@color/colorPrimary"
          android:textColorHint="@color/colorPrimary"
          android:textSize="15sp" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/adamina"
          android:text="Birth Date"
          android:textColor="@color/colorPrimary"
          android:textSize="15sp" />

      <EditText
          android:id="@+id/ed_birthdate_user_update"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/adamina"
          android:textColor="@color/colorPrimary"
          android:textColorHint="@color/colorPrimary"
          android:textSize="15sp"
          android:editable="false"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/adamina"
          android:text="Contact"
          android:textColor="@color/colorPrimary"
          android:textSize="15sp" />

      <EditText
          android:id="@+id/ed_contact_user_update"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/adamina"
          android:inputType="number"
          android:textColor="@color/colorPrimary"
          android:textColorHint="@color/colorPrimary"
          android:textSize="15sp" />



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Gender: "
            android:layout_weight="3"
            android:fontFamily="@font/adamina"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/rgGender_update"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <RadioButton
              android:id="@+id/radioMale_update"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:checked="true"
              android:text="Male"
              android:fontFamily="@font/adamina"
              android:textColor="@color/colorPrimary"
              android:textSize="15sp" />

          <RadioButton
              android:id="@+id/radioFemale_update"
              android:layout_width="100dp"
              android:layout_height="30dp"
              android:text="Female"
              android:fontFamily="@font/adamina"
              android:textColor="@color/colorPrimary"
              android:textSize="15sp"

              />

          <RadioButton
              android:id="@+id/radioOther_update"
              android:layout_width="80dp"
              android:layout_height="30dp"
              android:text="Other"
              android:fontFamily="@font/adamina"
              android:textColor="@color/colorPrimary"
              android:textSize="15sp"

              />
        </RadioGroup>
      </LinearLayout>


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/adamina"
          android:text="Address"
          android:textColor="@color/colorPrimary"
          android:textSize="15sp" />

      <EditText
          android:id="@+id/ed_address_user_update"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/adamina"
          android:inputType="text"
          android:textColor="@color/colorPrimary"
          android:textColorHint="@color/colorPrimary"
          android:textSize="15sp" />


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/adamina"
          android:text="Education "
          android:textColor="@color/colorPrimary"
          android:textSize="15sp" />

      <EditText
          android:id="@+id/ed_education_user_update"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/adamina"
          android:inputType="text"
          android:textColor="@color/colorPrimary"
          android:textColorHint="@color/colorPrimary"
          android:textSize="15sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/adamina"
          android:text="Professional Skill"
          android:textColor="@color/colorPrimary"
          android:textSize="15sp" />

      <EditText
          android:id="@+id/ed_professional_user_update"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/adamina"
          android:inputType="text"
          android:textColor="@color/colorPrimary"
          android:textColorHint="@color/colorPrimary"
          android:textSize="15sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/adamina"
          android:text="Experience"
          android:textColor="@color/colorPrimary"
          android:textSize="15sp" />

      <EditText
          android:id="@+id/ed_experience_user_update"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/adamina"
          android:inputType="text"
          android:textColor="@color/colorPrimary"
          android:textColorHint="@color/colorPrimary"
          android:textSize="15sp" />




      <Button
          android:id="@+id/btn_update_user"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="60dp"
          android:fontFamily="@font/adamina"
          android:text="Update"
          android:textSize="20dp" />






    </LinearLayout>
  </ScrollView>
  </LinearLayout>